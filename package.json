{
  "name": "my_webapp",
  "version": "1.0.0",
  "scripts": {
    "build-css": "tailwindcss -i ./src/styles.css -o ./static/css/style.css --minify",
    "watch-css": "tailwindcss -i ./src/styles.css -o ./static/css/style.css --watch",
    "start": "flask run",
    "dev": "concurrently \"npm run watch-css\" \"flask run\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
